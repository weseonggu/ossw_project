<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>수락문</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script>
        var bodywidth;
        var navbarwidith;
        $(document).ready(function(){

        });
        window.onload=function(){
          bodywidth = $("html").outerWidth();
          navbarwidith=$(".navbar").outerWidth();

          if(bodywidth<1920)
            {
              $(".title").css("width","80vw");
              $(".navbar").css("width","80vw");
              $(".contents").css("width","80vw");

            }
          else{
            $(".title").css("width","1536px");
            $(".navbar").css("width","1536px");
            $(".contents").css("width","1536px");

          }
          if(navbarwidith<=400){
            $(".map").css("width",navbarwidith);
            $(".score").css("width",navbarwidith);
          }
          else{
            $(".map").css("width","450px");
            $(".score").css("width","300px");
          }

          if(navbarwidith<=700){
            $(".write").css("width",navbarwidith);
            $(".comment").css("width",navbarwidith);
          }
          else{
            $(".write").css("width","700px");
            $(".comment").css("width","700px");
          }

        };
        window.addEventListener("resize",function() {
          bodywidth = $("html").outerWidth();
          navbarwidith=$(".navbar").outerWidth();

          if(bodywidth<1920)
          {
            $(".title").css("width","80vw");
            $(".navbar").css("width","80vw");
            $(".contents").css("width","80vw");


          }
          else{
            $(".title").css("width","1536px");
            $(".navbar").css("width","1536px");
            $(".contents").css("width","1536px");


          }
          if(navbarwidith<=400){
            $(".map").css("width",navbarwidith);
            $(".score").css("width",navbarwidith);
          }
          else{
            $(".map").css("width","450px");
            $(".score").css("width","300px");
          }
          if(navbarwidith<=700){
            $(".write").css("width",navbarwidith);
            $(".comment").css("width",navbarwidith);
          }
          else{
            $(".write").css("width","700px");
            $(".comment").css("width","700px");
          }
        });

    </script>

<style>
    a{
        text-decoration: none;
    }
    body{
      width: 80vw;
      margin: auto;
    }
    /* 제목 */
    .title{
        width: 80vw;
        height: auto;
        margin: auto;
        margin-top: 10px;
        margin-bottom: 10px;
    }
    .main-title{
        margin: auto;
        width: 200px;
        text-align: center;
    }
    .nowon-logo{
        height: 41px;
        object-fit: contain;
        float: left;
        margin-left: 10px;
    }
    .title-pont{
        height: 41px;
        object-fit: contain;
        margin: auto;
    }
    /* 메뉴 */
    #navbar{
        padding: 0px;
        margin: auto;
        margin-bottom: 16px;
    }

    .container-fluid{
        padding: 8px;
        width: 80vw;
        height: auto;
        background-color: #1dd369;
        border-radius: 7px;
    }

    /* 내용 */
    .contents{
        margin: auto;
    }
    .map{
        float: left;
        border-radius: 20px;
        margin-bottom: 8px;
    }
    .review{
        float: left;
    }
    .score{
        width: 300px;
        border: 1px solid rgb(179, 168, 168);
        border-radius: 10px;
        margin-bottom: 8px;
    }
    .score h3{
        margin: 8px;
    }
    .write{
        width: 700px;
        border: 1px solid rgb(179, 168, 168);
        border-radius: 10px;
        margin-bottom: 8px;
    }
    .number{
        margin: 8px;
    }
    .text{
        margin: 8px;
    }
    .btn{
        margin: 8px;
    }
    .comment{
        width: 700px;
        border: 1px solid rgb(179, 168, 168);
        border-radius: 10px;
        margin-bottom: 8px;
    }
    .comment p{
        margin-top: 8px;
        margin-left: 8px;
    }
    


</style>  
</head>
  <body>
    <!--웹 제목-->
    <div class="title">
        <img src="/images/노원구로고.png" class="nowon-logo">
        <h1 class="main-title"><img src="/images/수락문.png" class="title-pont"></h1>
    </div>
    <!--웹 메뉴-->
    <nav class="navbar navbar-expand-lg bg-light" id="navbar">
        <div class="container-fluid">
        <a class="navbar-brand" href="/" style="color: #ffffff;">수락문</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/hiking" style="color: #ffffff;">등산코스</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/park" style="color: #ffffff;">주차안내</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: #ffffff;">
                먹자골목
                </a>
                <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/restaurant">식당</a></li>
                <li><a class="dropdown-item" href="/book">예약</a></li>
                
                </ul>
            </li>
            </ul>
        </div>
        </div>
    </nav>

    <!--내용-->
    <div class="contents">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3157.9136722239828!2d127.05640681607184!3d37.674736225680356!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x357cb92bef1837e1%3A0xdf42e6a87d028580!2z7L-g66eI7YKk7LmcIOyImOudveyCsOygkA!5e0!3m2!1sko!2skr!4v1669551983746!5m2!1sko!2skr" width="450" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="map"></iframe>  
      <!--평점-->
        <div class="review">
            <div class="score">
                <h3>점수</h3><h3><%= avgdata %>/5</h3>
            </div>
            <!--리뷰작성칸-->
            <div class="write">
                <form action="/dongas-review" method="POST" class="write-review">
                    <div class="number">
                        <label>점수</label><br>
                        1 <input type="range" name="score" min="1" max="5"> 5
                    </div>

                    <div class="text">
                        <label>리뷰 내용</label><br>
                        <textarea name="reviewText" cols="30" rows="5"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">리뷰등록</button>
                </form>
            </div>
            <% for (var i = 0; i < review.length; i ++) { %>
                <div class="comment">
                    <p>평점: <span><%= review[i].score %></span></p>
                    <p>내용: <span><%= review[i].text %></span></p>
                </div>

            <% } %>

            

        </div>

    </div>

    



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

  </body>
</html>