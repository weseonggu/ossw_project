<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>수락문</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script>
        var bodywidth;
        var navbarwidith;
        $(document).ready(function(){

        });
        window.onload=function(){
          bodywidth = $("html").outerWidth();
          navbarwidith=$(".navbar").outerWidth();

          if(bodywidth<1920)
            {
              $(".title").css("width","80vw");
              $(".navbar").css("width","80vw");
              $(".contents").css("width","80vw");

            }
          else{
            $(".title").css("width","1536px");
            $(".navbar").css("width","1536px");
            $(".contents").css("width","1536px");

          }


        };
        window.addEventListener("resize",function() {
          bodywidth = $("html").outerWidth();
          navbarwidith=$(".navbar").outerWidth();

          if(bodywidth<1920)
          {
            $(".title").css("width","80vw");
            $(".navbar").css("width","80vw");
            $(".contents").css("width","80vw");


          }
          else{
            $(".title").css("width","1536px");
            $(".navbar").css("width","1536px");
            $(".contents").css("width","1536px");


          }

        });

    </script>

<style>
    a{
        text-decoration: none;
    }
    body{
      width: 80vw;
      margin: auto;
    }
    /* 제목 */
    .title{
        width: 80vw;
        height: auto;
        margin: auto;
        margin-top: 10px;
        margin-bottom: 10px;
    }
    .main-title{
        margin: auto;
        width: 200px;
        text-align: center;
    }
    .nowon-logo{
        height: 41px;
        object-fit: contain;
        float: left;
        margin-left: 10px;
    }
    .title-pont{
        height: 41px;
        object-fit: contain;
        margin: auto;
    }
    /* 메뉴 */
    #navbar{
        padding: 0px;
        margin: auto;
        margin-bottom: 16px;
    }

    .container-fluid{
        padding: 8px;
        width: 80vw;
        height: auto;
        background-color: #1dd369;
        border-radius: 7px;
    }

    /* 내용 */
    .contents{
        margin: auto;
    }
    .book{
        float: left;
        border: solid 2px black;
        padding: 8px;
        width: 250px;
        border-radius: 10px;
        margin-bottom: 8px;
        margin-right: 8px;
    }
    .booker-ok{
        float: left;
        width: 250pxs;
        border: solid 2px black;
        border-radius: 10px;
        padding: 8px;
    }
    


</style>  
</head>
  <body>
    <!--웹 제목-->
    <div class="title">
        <img src="/images/노원구로고.png" class="nowon-logo">
        <h1 class="main-title"><img src="/images/수락문.png" class="title-pont"></h1>
    </div>
    <!--웹 메뉴-->
    <nav class="navbar navbar-expand-lg bg-light" id="navbar">
        <div class="container-fluid">
        <a class="navbar-brand" href="/" style="color: #ffffff;">수락문</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/hiking" style="color: #ffffff;">등산코스</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/park" style="color: #ffffff;">주차안내</a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: #ffffff;">
                먹자골목
                </a>
                <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/restaurant">식당</a></li>
                <li><a class="dropdown-item" href="/book">예약</a></li>
                
                </ul>
            </li>
            </ul>
        </div>
        </div>
    </nav>

    <!--내용-->
    <div class="contents">
        <h1>쿠마키친 예약</h1>
        <!--예액 폼-->
        <div class="book">
            <form action="/dongas-book" method="POST" class="write-review">
                <div class="booker">
                    <label>예약자 이름</label><br>
                    <input type="text" name="name"> 
                </div>
                <div class="book_number">
                    <label>예약자 전화번호</label><br>
                    <input type="text" name="phone_number"> 
                </div>
                <div class="time">
                    <label>예약시간</label><br>
                    <input type="time" name="book_time">
                </div>
                <button type="submit" class="btn btn-primary">예약요청</button>
            </form>
        </div>
        <!--예약자 명단-->
        <div class="booker-ok">
            <h2>예약</h2>
            <% for (var i = 0; i < booker.length; i ++) { %>
                <div class="comment">
                    <p>예약자: <span><%= booker[i].name %></span></p>
                    <p>시간: <span><%= booker[i].time %></span></p>
                </div>
                <hr>

            <% } %>
        </div>


    </div>

    



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

  </body>
</html>